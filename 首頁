<script>
    function toggleIdentity(isNamed) {
        const section = document.getElementById('identitySection');
        const bNamed = document.getElementById('btnNamed');
        const bAnon = document.getElementById('btnAnon');

        if (isNamed) {
            section.style.display = 'block';
            bNamed.classList.add('border-red-600', 'bg-red-50');
            bAnon.classList.remove('border-red-600', 'bg-red-50');
        } else {
            section.style.display = 'none';
            bAnon.classList.add('border-red-600', 'bg-red-50');
            bNamed.classList.remove('border-red-600', 'bg-red-50');
        }
    }

    function checkAI() {
        const val = document.getElementById('suggestion').value;
        const prompt = document.getElementById('aiPrompt');
        if (val.includes('æ•™å®˜') || val.includes('æ´¥è²¼')) {
            prompt.classList.remove('hidden');
        } else {
            prompt.classList.add('hidden');
        }
    }
</script>
