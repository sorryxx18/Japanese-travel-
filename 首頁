  <script>
    // 顯示今日日期
    const d = new Date();
    document.getElementById('today').textContent = `${d.getFullYear()}-${String(d.getMonth()+1).padStart(2,'0')}-${String(d.getDate()).padStart(2,'0')}`;

    // 題目 1 邏輯：具名才顯示個人資料
    function toggleIdentity(isNamed) {
      document.getElementById('identitySection').style.display = isNamed ? 'block' : 'none';
    }

    // 題目 5 邏輯：模擬 AI 攔截
    function checkAI() {
      const val = document.getElementById('suggestion').value;
      if (val.includes('教官') || val.includes('津貼')) {
        document.getElementById('dupHint').style.display = 'block';
      }
    }

    function hideHint() { document.getElementById('dupHint').style.display = 'none'; }

    // 送出 Demo
    function submitDemo() {
      document.querySelector('.section').style.display = 'none';
      document.getElementById('successBox').style.display = 'block';
      window.scrollTo({top: 0, behavior: 'smooth'});
    }
  </script>
